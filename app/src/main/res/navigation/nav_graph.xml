<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/weatherFragment">

    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.almaz.weather_aa.ui.weather.WeatherFragment"
        android:label="Weather fragment"
        tools:layout="@layout/fragment_weather">

        <action
            android:id="@+id/action_weather_fragment_to_locations_fragment"
            app:destination="@id/locationsFragment" />
    </fragment>

    <fragment
        android:id="@+id/locationsFragment"
        android:name="com.almaz.weather_aa.ui.locations.LocationsFragment"
        android:label="Locations fragment"
        tools:layout="@layout/fragment_locations">

    </fragment>
